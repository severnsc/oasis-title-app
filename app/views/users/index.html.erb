<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>All Users</h1>
    <% @users.each do |user| %>
      <div class="user">
        <ul>
          <li><%= user.name %></li>
          <li><%= link_to "View #{user.name}'s profile", user_path(user) %></li>
          <li><%= link_to "Delete #{user.name}", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete #{user.name}?"} %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>