<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Reset Your Password</h1>
    <%= form_for :password_reset, url: password_reset_index_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>